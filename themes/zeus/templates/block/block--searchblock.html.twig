{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% block content %}
    <div class="container">
      <div class="row">
        <div class="col-12">
          {{ content }}
        </div>
      </div>
    </div>
  {% endblock %}
</div>
